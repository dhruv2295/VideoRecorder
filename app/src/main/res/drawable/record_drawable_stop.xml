<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="center">
        <shape
            android:shape="oval">


            <stroke
                android:width="2dp"
                android:color="@color/red" />



            <size
                android:width="80dp"
                android:height="80dp" />

        </shape>
    </item>

    <item android:gravity="center">

        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/red"/>

            <size
                android:width="40dp"
                android:height="40dp"/>

        </shape>
    </item>
</layer-list>

