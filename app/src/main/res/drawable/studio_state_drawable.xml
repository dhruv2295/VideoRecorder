<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected, use grey -->
    <item android:drawable="@drawable/record_drawable_stop" android:state_checked="true" />

    <item android:drawable="@drawable/record_drawable_small" android:state_pressed="true" />
    <item android:drawable="@drawable/record_drawable_small" android:state_focused="true" />

    <!-- When not selected, use white-->
    <item android:drawable="@drawable/record_drawable" android:state_checked="false" />

</selector>
